<div class="row" style="padding-top:10%;">
<div class="col"></div>
<div class="col=md-7">
<h1>Edit an existing Article!!!</h1>
<%= form_for @article, url:article_path, html: {multipart: true} do |f| %>
    <div class="field" style="100%">
    <!-- Checking for Errors -->
    <% if @article.errors.any? %>
        <div id="Errors_explanation">
        <h2>
        <%= pluralize(@article.errors.count, "error") %>
        prohibited this article from being saved:
        </h2>
        <p>
        <ul>
            <% @article.errors.full_messages.each do |msg| %>
            <li>
                <%= msg %>
            </li>
            <% end %>
        </ul>
        </p>
        </div>
    <% end %>

    <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'form-control' %>
    </p>
    <p>
    <%= f.label :text %><br>
    <%= f.text_area :text, class: 'form-control' %>
    </p>
    <p>
    <%= f.submit class: "btn btn-lg btn-success"%>
    </p>
    <p>
        <%= f.label :photo %><br>
        <%= f.file_field :photo, class:'form-control mr-sm-2 sm_style' %>
    </p>
        <p>
        <%= f.label :music %><br>
        <%= f.file_field :music, class:'form-control mr-sm-2 sm_style' %>
    </p>
        <p>
        <%= f.label :movie %><br>
        <%= f.file_field :movie, class:'form-control mr-sm-2 sm_style' %>
    </p>
    </p>
    </div>
    <% end %>
<p>
    <%= link_to("Back to post list", articles_path, class: 'btn btn-md btn-info') %>
    <%= link_to("Back to home page", welcome_index_path, class: 'btn btn-md btn-primary') %>
</p>

</p></div><!-- .col-md-10 closing-->
<div class ="col"></div>
</div>