<h1>Edit an existing Article!!!</h1>
<%= form_for @article, url:article_path do |f| %>
    <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
    </p>
    <p>
    <%= f.label :text %>
    <%= f.text_area :text %>
    </p>
    <p>
    <%= f.submit %>
    </p>
    </p>
    <% end %>
<p>
    <%= link_to("Back to home page", welcome_index_path) %>
</p>